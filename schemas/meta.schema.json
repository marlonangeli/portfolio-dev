{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./schemas/meta.schema.json",
  "title": "Typed Metadata",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "doc_type",
    "category",
    "priority",
    "status",
    "created",
    "updated",
    "version",
    "changelog"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]*$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "doc_type": {
      "type": "string",
      "enum": [
        "index",
        "spec",
        "requirement",
        "task",
        "skill",
        "guide",
        "template"
      ]
    },
    "category": {
      "type": "string",
      "enum": [
        "security",
        "style",
        "documentation",
        "performance",
        "versioning",
        "database",
        "development",
        "workflow",
        "ai"
      ]
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "deprecated"]
    },
    "created": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}(?:-[A-Z]{2})?$"
    },
    "i18n": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z]{2}(?:-[A-Z]{2})?$"
      },
      "uniqueItems": true
    },
    "relates": {
      "oneOf": [
        { "type": "string", "minLength": 1 },
        {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        }
      ]
    },
    "changelog": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    }
  }
}
