{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./schemas/curriculum/common.schema.json",
  "$defs": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]*$"
    },
    "localeMap": {
      "type": "object",
      "required": ["pt-BR"],
      "propertyNames": {
        "pattern": "^[a-z]{2}(?:-[A-Z]{2})?$"
      },
      "additionalProperties": {
        "type": "string",
        "minLength": 1
      },
      "minProperties": 1
    },
    "translatableText": {
      "anyOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "$ref": "./common.schema.json#/$defs/localeMap"
        }
      ]
    },
    "yearMonth": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}$"
    },
    "presentOrYearMonth": {
      "anyOf": [
        {
          "const": "present"
        },
        {
          "$ref": "./common.schema.json#/$defs/yearMonth"
        }
      ]
    },
    "httpsOrLinkId": {
      "type": "string",
      "minLength": 1
    }
  }
}
