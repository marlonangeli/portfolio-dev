{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./schemas/curriculum/languages.schema.json",
  "type": "object",
  "required": ["languages"],
  "additionalProperties": false,
  "properties": {
    "languages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "code", "name", "level"],
        "additionalProperties": false,
        "properties": {
          "id": { "$ref": "./common.schema.json#/$defs/id" },
          "code": { "type": "string", "pattern": "^[a-z]{2}(?:-[A-Z]{2})?$" },
          "name": { "$ref": "./common.schema.json#/$defs/translatableText" },
          "level": { "type": "string", "enum": ["native", "c2", "c1", "b2", "b1", "a2", "a1"] },
          "certificate_link": { "type": "string", "pattern": "^https://" }
        }
      }
    }
  }
}
