{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./schemas/curriculum/experience.schema.json",
  "type": "object",
  "required": ["experience"],
  "additionalProperties": false,
  "properties": {
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "company", "role", "start", "end", "achievements"],
        "additionalProperties": false,
        "properties": {
          "id": { "$ref": "./common.schema.json#/$defs/id" },
          "company": {
            "type": "object",
            "required": ["name", "website"],
            "additionalProperties": false,
            "properties": {
              "name": { "$ref": "./common.schema.json#/$defs/translatableText" },
              "website": { "$ref": "./common.schema.json#/$defs/httpsOrLinkId" }
            }
          },
          "role": { "$ref": "./common.schema.json#/$defs/translatableText" },
          "start": { "$ref": "./common.schema.json#/$defs/yearMonth" },
          "end": { "$ref": "./common.schema.json#/$defs/presentOrYearMonth" },
          "achievements": {
            "type": "array",
            "items": { "$ref": "./common.schema.json#/$defs/translatableText" }
          },
          "related_links": {
            "type": "array",
            "items": { "$ref": "./common.schema.json#/$defs/id" }
          },
          "technologies": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    }
  }
}
