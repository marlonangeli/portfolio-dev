{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./schemas/generated/curriculum/education.schema.json",
  "type": "object",
  "properties": {
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9._-]*$"
          },
          "institution": {
            "type": "object",
            "properties": {
              "name": {
                "anyOf": [
                  {
                    "type": "string",
                    "minLength": 1
                  },
                  {
                    "type": "object",
                    "propertyNames": {
                      "type": "string"
                    },
                    "additionalProperties": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                ]
              },
              "short_name": {
                "type": "string",
                "minLength": 1
              },
              "website": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "name",
              "website"
            ],
            "additionalProperties": false
          },
          "degree": {
            "anyOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "type": "object",
                "propertyNames": {
                  "type": "string"
                },
                "additionalProperties": {
                  "type": "string",
                  "minLength": 1
                }
              }
            ]
          },
          "study_type": {
            "anyOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "type": "object",
                "propertyNames": {
                  "type": "string"
                },
                "additionalProperties": {
                  "type": "string",
                  "minLength": 1
                }
              }
            ]
          },
          "start": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "end": {
            "anyOf": [
              {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}$"
              },
              {
                "type": "string",
                "const": "present"
              }
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "in-progress",
              "completed",
              "paused"
            ]
          }
        },
        "required": [
          "id",
          "institution",
          "degree",
          "start",
          "end",
          "status"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "education"
  ],
  "additionalProperties": false
}
