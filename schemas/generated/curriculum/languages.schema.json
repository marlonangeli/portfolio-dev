{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./schemas/generated/curriculum/languages.schema.json",
  "type": "object",
  "properties": {
    "languages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9._-]*$"
          },
          "code": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "anyOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "type": "object",
                "propertyNames": {
                  "type": "string"
                },
                "additionalProperties": {
                  "type": "string",
                  "minLength": 1
                }
              }
            ]
          },
          "level": {
            "type": "string",
            "enum": [
              "native",
              "c2",
              "c1",
              "b2",
              "b1",
              "a2",
              "a1"
            ]
          },
          "certificate_link": {
            "type": "string",
            "format": "uri",
            "pattern": "^https:\\/\\/.*"
          }
        },
        "required": [
          "id",
          "code",
          "name",
          "level"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "languages"
  ],
  "additionalProperties": false
}
