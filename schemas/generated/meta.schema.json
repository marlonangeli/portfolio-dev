{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./schemas/generated/meta.schema.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]*$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "doc_type": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "enum": [
        "security",
        "style",
        "documentation",
        "performance",
        "versioning",
        "database",
        "development",
        "workflow",
        "ai"
      ]
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "review",
        "approved",
        "deprecated"
      ]
    },
    "created": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "language": {
      "type": "string",
      "minLength": 1
    },
    "i18n": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "relates": {
      "anyOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      ]
    },
    "changelog": {
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "required": [
    "id",
    "title",
    "doc_type",
    "category",
    "priority",
    "status",
    "created",
    "updated",
    "version",
    "changelog"
  ],
  "additionalProperties": false
}
